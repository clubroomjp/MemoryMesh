{
  "name": "add_npc",
  "description": "ナレッジグラフに新しいノンプレイヤーキャラクター（NPC）を追加します",
  "properties": {
    "name": {
      "type": "string",
      "description": "NPCの名前",
      "required": true
    },
    "role": {
      "type": "string",
      "description": "NPCの役割または職業",
      "required": true
    },
    "status": {
      "type": "string",
      "description": "NPCの現在のステータス",
      "required": true
    },
    "currentLocation": {
      "type": "string",
      "description": "NPCの現在の場所",
      "required": true,
      "relationship": {
        "edgeType": "located_in",
        "description": "NPCの現在の場所"
      }
    },
    "description": {
      "type": "string",
      "description": "NPCの詳細な説明",
      "required": true
    },
    "gender": {
      "type": "string",
      "description": "NPCの性別",
      "required": false
    },
    "race": {
      "type": "string",
      "description": "NPCの種族",
      "required": false
    },
    "background": {
      "type": "string",
      "description": "NPCの生い立ち",
      "required": false
    },
    "secret": {
      "type": "string",
      "description": "NPCに関する隠された詳細",
      "required": false
    },
    "origin": {
      "type": "string",
      "description": "NPCの出身地または故郷",
      "required": false,
      "relationship": {
        "edgeType": "originates_from",
        "description": "NPCの出身地"
      }
    },
    "traits": {
      "type": "array",
      "description": "NPCのユニークな特性または特徴",
      "required": false
    },
    "abilities": {
      "type": "array",
      "description": "NPCが持つ特定のスキルまたは能力",
      "required": false
    },
    "importance": {
      "type": "string",
      "description": "物語または世界におけるNPCの重要度",
      "required": false
    },
    "reputation": {
      "type": "string",
      "description": "NPCが他者からどのように認識されているか",
      "required": false
    },
    "money": {
      "type": "string",
      "description": "NPCが保有する通貨または富",
      "required": false
    },
    "alignment": {
      "type": "string",
      "description": "NPCの倫理的または道徳的な属性",
      "required": false
    },
    "motivation": {
      "type": "string",
      "description": "NPCの原動力または目標",
      "required": false
    }
  },
  "additionalProperties": true
}
